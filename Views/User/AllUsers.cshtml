@using Accounting.Models
@model IEnumerable<Accounting.Models.User>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список пользователей</h2>
        </div>
        <div class="form-group">
            <a asp-controller="User" asp-action="Create" class="btn-primary text-right">Добавить пользователя</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Логин
                    </th>
                    <th>
                        Пароль
                    </th>
                    <th>
                        Уровень доступа
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var users in Model)
                {
                <tr>

                    <td width="40%">@users.UserName</td>
                    <td width="40%">@users.Password</td>
                    <td width="20%">@users.UserLevel</td>
                    <td width="40%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="User" asp-action="Update" asp-route-Id="@users.UserId" class="btn-primary mx-1">Изменить</a>
                            <a asp-controller="User" asp-action="DeletePost" asp-route-Id="@users.UserId" class="btn-danger mx-1">Удалить</a>
                        </div>
                    </td>
                </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p>Пользователи еще не созданы</p>
    }

</div>


@using Accounting.Models
@model IEnumerable<Accounting.Models.Goods>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Оборудование</h2>
        </div>
        <div class="form-group">
            <a asp-controller="Goods" asp-action="Create" class="btn-primary text-right">Добавить оборудование</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        С.н.
                    </th>
                    <th>
                        Название
                    </th>
                    <th>
                        Категория
                    </th>
                    <th>
                        Стоимость, BYN
                    </th>
                    <th>
                        Склад
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var goods in Model)
                {
                    <tr>

                        <td width="5%">@goods.goodsId</td>
                        <td width="40%">@goods.goodsName</td>
                        <td width="30%">@goods.Category.categoryName</td>
                        <td width="20%">@goods.goodsCost</td>
                        <td width="40%">@goods.Storage.storageTitle</td>
                        <td width="40%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Goods" asp-action="Update" asp-route-Id="@goods.goodsId" class="btn-primary mx-1">Изменить</a>
                                <a asp-controller="Goods" asp-action="DeletePost" asp-route-Id="@goods.goodsId" class="btn-danger mx-1">Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Товары еще не созданы</p>
    }

</div>


@model Accounting.Models.Category

<form method="post" asp-action="DeletePost">
    <input asp-for="categoryId" hidden/>
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Удалить категорию</h2>
        </div>
        <div class="row">
            <div class="form-group row">
                <div class=" col-4">
                    <label asp-for="categoryName"></label>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <input asp-for="categoryName" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col- text-center row">
                    <input type="submit" class="btn-info btn-danger w-75" value="Delete" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn-success w-75">Back</a>
                </div>
            </div>
        </div>
    </div>
</form>


@model Accounting.Models.Category

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Добавить категорию</h2>
        </div>
        <div class="row">
            <div class="form-group row">
                <div class=" col-4">
                    <label asp-for="categoryName"></label>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <input asp-for="categoryName" class="form-control" />
                    <span asp-validation-for="categoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col- text-center row">
                    <input type="submit" class="btn-info btn-info w-75" value="create" />
                </div>
                <div class="col">
                    <a  asp-action="Index" class="btn-danger w-75">Back</a>
                </div>
            </div>
        </div>
    </div>
</form>


@using Accounting.Models
@model IEnumerable<Accounting.Models.Goods>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> </h2>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        С.н.
                    </th>
                    <th>
                        Название
                    </th>
                    <th>
                        Стоимость, BYN
                    </th>
                    <th>
                        Склад
                    </th>
                    <th>
                        Адрес
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var goods in Model)
                {
                <tr>

                    <td width="5%">@goods.goodsId</td>
                    <td width="40%">@goods.goodsName</td>
                    <td width="20%">@goods.goodsCost</td>
                    <td width="20%">@goods.Storage.storageTitle</td>
                    <td width="20%">@goods.Storage.storageAdress</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Товары еще не созданы</p>
    }

</div>

